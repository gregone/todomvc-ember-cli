<footer id='footer'>
  <span id='todo-count'><strong>{{remaining}}</strong> items left</span>
  <ul id='filters'>
    <li>{{#link-to 'todos.index'}}All{{/link-to}}</li>
    <li>{{#link-to 'todos.active'}}Active{{/link-to}}</li>
    <li>{{#link-to 'todos.completed'}}Completed{{/link-to}}</li>
  </ul>
  <button id='clear-completed' {{action 'clearCompleted' todos}}>Clear Completed ({{completed}})</button>
</footer>
